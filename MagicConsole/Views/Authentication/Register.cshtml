@model MagicConsole.features.Authentication.Models.RegisterFormModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<section class="body-sign">
    <div class="center-sign">
        <a href="/" class="logo pull-left">
            <img src="~/assets/images/logo.png" height="54" alt="Porto Admin" />
        </a>

        <div class="panel panel-sign">
            <div class="panel-title-sign mt-xl text-right">
                <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i>@Html.ActionLink("Sign In", "Login")</h2>
                <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i>Register</h2>
            </div>

            <div class="panel-body">
                @using (Html.BeginForm("Register", "Authentication", FormMethod.Post, null))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="form-group mb-lg">
                        @Html.LabelFor(model => model.Name)
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control input-lg", autocomplete = "given-name" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", type = "text" })

                    </div>

                    <div class="form-group mb-lg">
                        @Html.LabelFor(model => model.Username)
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { type = "email", @class = "form-control input-lg", autocomplete = "email" } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger", type = "text" })
                    </div>

                    <div class="form-group mb-none">
                        <div class="row">
                            <div class="col-sm-6 mb-lg">
                                @Html.LabelFor(model => model.Password)
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { type = "password", @class = "form-control input-lg", autocomplete = "password" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger", type = "text" })
                            </div>
                            <div class="col-sm-6 mb-lg">
                                @Html.LabelFor(model => model.PasswordRepeat)
                                @Html.EditorFor(model => model.PasswordRepeat, new { htmlAttributes = new { type = "password", @class = "form-control input-lg", autocomplete = "password-repeat" } })
                                @Html.ValidationMessageFor(model => model.PasswordRepeat, "", new { @class = "text-danger", type = "text" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-8">
                            <div class="checkbox-custom checkbox-default">
                                <input id="AgreeTerms" name="agreeterms" type="checkbox" />
                                <label for="AgreeTerms">I agree with <a href="#">terms of use</a></label>
                            </div>
                        </div>
                        <div class="col-sm-4 text-right">
                            <button type="submit" class="btn btn-primary hidden-xs">Sign Up</button>
                            <button type="submit" class="btn btn-primary btn-block btn-lg visible-xs mt-lg">Sign Up</button>
                        </div>
                    </div>

                    @*<span class="mt-lg mb-lg line-thru text-center text-uppercase">
                            <span>or</span>
                        </span>

                        <div class="mb-xs text-center">
                            <a class="btn btn-facebook mb-md ml-xs mr-xs">Connect with <i class="fa fa-facebook"></i></a>
                            <a class="btn btn-twitter mb-md ml-xs mr-xs">Connect with <i class="fa fa-twitter"></i></a>
                        </div>*@

                    <p class="text-center">Already have an account? @Html.ActionLink("Sign In!", "Login")</p>
                }
            </div>
        </div>

        <p class="text-center text-muted mt-md mb-md">&copy; Copyright 2018. All rights reserved. Template by <a href="https://colorlib.com">Colorlib</a>.</p>
    </div>
</section>

